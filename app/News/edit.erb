<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @news.en_news %></h1>
    <a href="<%= url_for :action => :show, :id => @news.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @news.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @news.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="news[en_news]" class="fieldLabel">En news</label>
            <input type="text" id="news[en_news]" name="news[en_news]" value="<%= @news.en_news %>" <%= placeholder( "En news" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="news[jp_news]" class="fieldLabel">Jp news</label>
            <input type="text" id="news[jp_news]" name="news[jp_news]" value="<%= @news.jp_news %>" <%= placeholder( "Jp news" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
