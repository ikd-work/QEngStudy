<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @news.object %>
    <h1>Edit <%= @news.en_news%></h1>
    <%= link_to "Delete", :action => :delete, :id => @news.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @news.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">En news: </td>
              <td class="itemValue"><input type="text" name="news[en_news]" value="<%= @news.en_news %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Jp news: </td>
              <td class="itemValue"><input type="text" name="news[jp_news]" value="<%= @news.jp_news %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
